{
	"name": "markdown-wysiwyg-editor",
	"displayName": "Markdown WYSIWYG Editor",
	"description": "A simple what-you-see-is-what-you-get editor for Markdown files",
	"version": "0.0.1",
	"publisher": "vscode-samples",
	"private": true,
	"license": "MIT",
	"engines": {
		"vscode": "^1.100.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/Microsoft/vscode-extension-samples"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [],
	"main": "./out/extension.js",
	"contributes": {
		"customEditors": [
			{
				"viewType": "markdownWysiwyg.editor",
				"displayName": "Markdown WYSIWYG Editor",
				"selector": [
					{
						"filenamePattern": "*.md"
					}
				],
				"priority": "option"
			}
		],
		"configuration": {
			"title": "Markdown WYSIWYG Editor",
			"properties": {
				"markdownWysiwyg.quip.accessToken": {
					"type": "string",
					"default": "",
					"description": "Quip API access token for authentication. Get your token at https://quip.com/dev/token",
					"markdownDescription": "Quip API access token for authentication. Get your token at [https://quip.com/dev/token](https://quip.com/dev/token)"
				}
			}
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "markdown-wysiwyg-assistant",
					"title": "AI Writing Assistant",
					"icon": "$(sparkle)"
				},
				{
					"id": "quip-explorer",
					"title": "Quip Explorer",
					"icon": "$(cloud)"
				}
			]
		},
		"views": {
			"markdown-wysiwyg-assistant": [
				{
					"type": "webview",
					"id": "markdownWysiwyg.aiAssistant",
					"name": "AI Assistant"
				}
			],
			"quip-explorer": [
				{
					"id": "quipDocuments",
					"name": "Documents"
				}
			]
		},
		"commands": [
			{
				"command": "quip.refresh",
				"title": "Refresh",
				"icon": "$(refresh)"
			},
			{
				"command": "quip.openDocument",
				"title": "Open Quip Document"
			},
			{
				"command": "quip.pushChanges",
				"title": "Push Changes to Quip",
				"icon": "$(cloud-upload)"
			},
			{
				"command": "quip.createDocument",
				"title": "Create New Quip Document",
				"icon": "$(new-file)"
			},
			{
				"command": "quip.setAccessToken",
				"title": "Set Quip Access Token"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "quip.refresh",
					"when": "view == quipDocuments",
					"group": "navigation"
				},
				{
					"command": "quip.createDocument",
					"when": "view == quipDocuments",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "quip.openDocument",
					"when": "view == quipDocuments && viewItem == quipDocument"
				}
			],
			"editor/title": [
				{
					"command": "quip.pushChanges",
					"when": "resourceScheme == file && resourceExtname == .md",
					"group": "navigation"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint",
		"watch": "tsc -w -p ./"
	},
	"devDependencies": {
		"@eslint/js": "^9.13.0",
		"@stylistic/eslint-plugin": "^2.9.0",
		"@types/node": "^22",
		"@types/vscode": "^1.100.0",
		"eslint": "^9.13.0",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.39.0"
	},
	"dependencies": {
		"@vscode/codicons": "^0.0.41",
		"marked": "^9.1.0",
		"turndown": "^7.2.1"
	}
}
